		        				   Field.SystemItem.SourcePackageID sourcepackageID = (Field.SystemItem.SourcePackageID)systemItemObj.get(0);
		        				   Field.SystemItem.TImecode timeCode = (Field.SystemItem.TImecode)systemItemObj.get(1);
