			System.out.println("toplevelinfo >> summary : " + taskReport.getToplevelinfo().getSummary());
			int parmname = 0;
			List<Streamnode> listofStreamsNodes = taskReport.getStreamnode();
		    System.out.println(listofStreamsNodes);
